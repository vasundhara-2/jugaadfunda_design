<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:padding="5dp"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".AddActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/layout_fromdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_baseline_date_range_24"/>
                <LinearLayout
                    android:id="@+id/layout_startwork"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/side_margin"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_beatytips"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="start"
                        android:text="@string/from"
                        android:textColor="@color/gray"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"

                        >

                        <TextView
                            android:id="@+id/txt_startdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="Friday, 01 January 2022"
                            android:textAlignment="viewStart"
                            android:textColor="@color/black"
                            android:layout_weight="2"
                            android:textStyle="bold"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@+id/tv_beatytips_heading"
                            android:layout_weight="1"
                            android:src="@drawable/edit_18" />
                    </LinearLayout>
                </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_tilldate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_baseline_date_range_24"/>
                <LinearLayout
                    android:id="@+id/layout_finishwork"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/side_margin"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="start"
                        android:text="@string/till"
                        android:textColor="@color/gray"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
android:weightSum="3"
                        >

                        <TextView
                            android:id="@+id/txt_enddate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="Wednesday, 12 January 2022"
                            android:textAlignment="viewStart"
                            android:layout_weight="2"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/edit_18" />
                    </LinearLayout>
                </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/btn_clear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clear"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/side_margin"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btnShow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Show"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/side_margin"
                        android:textColor="@color/white" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txt_selectedDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Friday, 24 December 2021"
                        android:textColor="@color/black"
                        android:layout_gravity="center_horizontal"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_didnotwork"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_below="@+id/txt_selectedDate"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="5dp"
                        android:text="Did not work"
                        android:textColor="@color/black" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_didnotwork"
                        android:gravity="center"
                        android:layout_marginBottom="40dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            app:cardCornerRadius="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/layout_work"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:paddingLeft="10dp"
                                        android:paddingTop="10dp"
                                        android:paddingRight="10dp">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="8dp"
                                            android:background="@drawable/ic_baseline_profile_24"
                                            android:padding="10dp"
                                            />

                                        <EditText
                                            android:layout_width="50dp"
                                            android:layout_height="30dp"
                                            android:layout_marginLeft="5dp"
                                            android:background="@drawable/textview_background"
                                            android:editable="false"
                                            android:text="@string/work"
                                            android:textAlignment="center"
                                            android:textAppearance="?android:attr/textAppearanceLarge"
                                            android:textColor="@color/white"
                                            android:textSize="14sp" />

                                        <TextView
                                            android:id="@+id/txt_workdiff"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="#ffffff"
                                            android:padding="10dp"
                                            android:text="8h"
                                            android:textColor="#000"
                                            android:textSize="15dp"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="40dp"
                                            android:background="@drawable/start_time"

                                            />

                                        <TextView
                                            android:id="@+id/txt_workstart"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="#ffffff"
                                            android:paddingLeft="2dp"
                                            android:text="10:00 AM"
                                            android:textColor="#000"
                                            android:textSize="14dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="#ffffff"
                                            android:paddingLeft="2dp"
                                            android:text=" - "
                                            android:textColor="#000"
                                            android:textSize="17dp" />

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/start_time"

                                            />

                                        <TextView
                                            android:id="@+id/txt_workend"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="#ffffff"
                                            android:paddingLeft="2dp"
                                            android:text="06:00 PM"
                                            android:textColor="#000"
                                            android:textSize="14dp" />
                                    </LinearLayout>

                                </LinearLayout>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_marginTop="2dp"
                                    android:background="@drawable/border"/>
                                <LinearLayout
                                    android:id="@+id/layout_break"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:paddingLeft="10dp"
                                        android:paddingTop="10dp"
                                        android:paddingRight="10dp">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/ic_baseline_profile_24"
                                            android:padding="10dp"
                                            android:layout_marginTop="8dp"
                                            />

                                        <EditText
                                            android:layout_width="50dp"
                                            android:layout_height="30dp"
                                            android:layout_marginLeft="5dp"
                                            android:background="@drawable/break_background"
                                            android:editable="false"
                                            android:text="@string/breatime"
                                            android:textAlignment="center"
                                            android:textAppearance="?android:attr/textAppearanceLarge"
                                            android:textColor="@color/white"
                                            android:textSize="14sp" />

                                        <TextView
                                            android:id="@+id/txt_breakdiff"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="#ffffff"
                                            android:padding="10dp"
                                            android:text="30m"
                                            android:textColor="#000"
                                            android:textSize="15dp"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="40dp"
                                            android:background="@drawable/start_time"

                                            />

                                        <TextView
                                            android:id="@+id/txt_breakstart"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="#ffffff"
                                            android:paddingLeft="2dp"
                                            android:text="01:00 AM"
                                            android:textColor="#000"
                                            android:textSize="14dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="#ffffff"
                                            android:paddingLeft="2dp"
                                            android:text=" - "
                                            android:textColor="#000"
                                            android:textSize="17dp" />

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/start_time"

                                            />

                                        <TextView
                                            android:id="@+id/txt_breakend"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="#ffffff"
                                            android:paddingLeft="2dp"
                                            android:text="01:30 PM"
                                            android:textColor="#000"
                                            android:textSize="14dp" />
                                    </LinearLayout>
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_marginTop="2dp"
                                    android:background="@drawable/border"/>

                                <LinearLayout
                                    android:id="@+id/layout_travel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:paddingLeft="10dp"
                                        android:paddingTop="10dp"
                                        android:paddingRight="10dp">
                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/ic_baseline_profile_24"
                                            android:padding="10dp"
                                            android:layout_marginTop="8dp"
                                            />

                                        <EditText
                                            android:layout_width="50dp"
                                            android:layout_height="30dp"
                                            android:layout_marginLeft="5dp"
                                            android:background="@drawable/travel_background"
                                            android:editable="false"
                                            android:text="@string/travel"
                                            android:textAlignment="center"
                                            android:textAppearance="?android:attr/textAppearanceLarge"
                                            android:textColor="@color/white"
                                            android:textSize="14sp" />

                                        <TextView
                                            android:id="@+id/txt_traveldiff"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="#ffffff"
                                            android:padding="10dp"
                                            android:text="50m"
                                            android:textColor="#000"
                                            android:textSize="15dp"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="40dp"
                                            android:background="@drawable/start_time"

                                            />

                                        <TextView
                                            android:id="@+id/txt_travelstart"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="#ffffff"
                                            android:paddingLeft="2dp"
                                            android:text="04:00 AM"
                                            android:textColor="#000"
                                            android:textSize="14dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="#ffffff"
                                            android:paddingLeft="2dp"
                                            android:text=" - "
                                            android:textColor="#000"
                                            android:textSize="17dp" />

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/start_time"

                                            />

                                        <TextView
                                            android:id="@+id/txt_travelend"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="#ffffff"
                                            android:paddingLeft="2dp"
                                            android:text="04:50 PM"
                                            android:textColor="#000"
                                            android:textSize="14dp" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>
</LinearLayout>